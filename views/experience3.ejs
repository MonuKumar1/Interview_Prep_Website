                            let company = document.getElementById("c_name");
                            let url = window.location.pathname;
                            const nameValue = url.split('/')[2];
                            company.innerText = nameValue.charAt(0).toUpperCase() + nameValue.slice(1);
                        
                            let cmp =  document.querySelectorAll("div span.company");
